<Window x:Class="FoodToOrder_WPF.Restaurants"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodToOrder_WPF"
        mc:Ignorable="d"
        Title="Restaurants" Height="600" Width="800" Background="#2d2d2d">
   <Viewbox Stretch="Uniform">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <TextBlock Margin="5 5 5 5" Text="RESTAURANTS" TextAlignment="Center" FontSize="18" FontWeight="Bold"/>
            <ListBox Background ="#2d2d2d"  HorizontalContentAlignment="Center" Margin="5 5 5 5"  Width="300pt" Name="restaurants" Grid.Row="1" HorizontalAlignment="Center" />

        </Grid>
    </Viewbox>
</Window>
